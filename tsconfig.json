{
  "compilerOptions": {
    "esModuleInterop": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.(t|j)s"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
